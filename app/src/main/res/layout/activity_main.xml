<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activities.MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView android:text="@string/full_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <EditText style="@style/SingleLineInputText"
                  android:id="@+id/nameText"
                  android:inputType="textPersonName"
                  android:layout_width="match_parent"/>

        <TextView android:text="@string/email_address"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <EditText style="@style/SingleLineInputText"
                  android:id="@+id/emailText"
                  android:inputType="textEmailAddress"
                  android:layout_width="match_parent"/>

        <TextView android:text="@string/teams"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <EditText style="@style/SingleLineInputText"
                  android:id="@+id/teamText"
                  android:inputType="text"
                  android:layout_width="match_parent"/>

        <TextView android:text="@string/about"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <EditText style="@style/MultiLineInputText"
                  android:id="@+id/aboutText"
                  android:inputType="text"
                  android:layout_width="match_parent"/>

        <TextView android:text="@string/urls"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <EditText style="@style/MultiLineInputText"
                  android:id="@+id/urlText"
                  android:inputType="textUri"
                  android:layout_width="match_parent"/>
    </LinearLayout>
</ScrollView>